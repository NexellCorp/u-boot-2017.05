if ARCH_NEXELL

choice
	prompt "Board select"

config TARGET_ARTIK310S_TRIKE
	bool "ARTIK310S_TRIKE"
	depends on ARCH_NXP3225
	help
	  Support for artik310s trike board.

config TARGET_NXP3220_VTK
	bool "NXP3220_VTK"
	depends on ARCH_NXP3220
	help
	  Support for nxp3220 validation test board.

config TARGET_NXP3220_EVB
	bool "NXP3220_EVB"
	depends on ARCH_NXP3220
	help
	  Support for nxp3220 evb board.

config TARGET_NXP3220_DAUDIO
	bool "NXP3220_DAUDIO"
	depends on ARCH_NXP3220
	help
	  Support for nxp3220 daudio board.

endchoice

config SYS_CONFIG_NAME
        string "Board header file"
        help
          This option should contain the base name of board header file.
          The header file include/configs/<CONFIG_SYS_CONFIG_NAME>.h
          should be included from include/config.h.

source "board/nexell/artik310s_trike/Kconfig"
source "board/nexell/nxp3220_vtk/Kconfig"
source "board/nexell/nxp3220_evb/Kconfig"
source "board/nexell/common/Kconfig"

endif
